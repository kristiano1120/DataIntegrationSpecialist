List<Opportunity> opps = [SELECT Id, Name, Account.Name, CloseDate, Amount 
                                  FROM Opportunity
                                  ];
List<Id> ids = new List<Id>();
for (Opportunity op : opps) {
    ids.add(op.Id);
}                                  

